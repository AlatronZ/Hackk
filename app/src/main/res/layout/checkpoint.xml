<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/grey02"
    android:layout_marginBottom="@dimen/padding">
    <ImageView
        android:id="@+id/checkpointImage"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/text01"
        android:text="@string/empty_checkpoint"

        android:layout_width="match_parent"
        android:layout_height="@dimen/spacer_small"

        android:gravity="center"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/checkpointImage"
        android:layout_toEndOf="@id/checkpointImage" />
</RelativeLayout>